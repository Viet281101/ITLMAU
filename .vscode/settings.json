{
    "ocaml.sandbox": {
        "kind": "global"
    },
    "files.associations": {
        "*.fs": "glsl",
        "*.vs": "glsl",
        "*.pike": "java",
        "heap.h": "c",
        "fifo.h": "c",
        "ima.h": "c",
        "limits.h": "c",
        "cstdlib": "c",
        "game.h": "c",
        "*.tcc": "cpp",
        "unordered_map": "cpp",
        "fstream": "cpp",
        "istream": "cpp"
    },

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "entity.name.todo.latex",
                "settings": {
                    "foreground": "#bd7829",
                    "fontStyle": "italic",
                }
            },
            {
                "scope": "support.function.todo.latex",
                "settings": {
                    "foreground": "#bd7829",
                    "fontStyle": "italic",
                }
            }
        ],
    },
    "liveServer.settings.port": 5501,
    "python.testing.pytestArgs": [
        "Semestre_6_L3"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "dotnet.defaultSolution": "disable"
}