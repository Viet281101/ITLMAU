<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_dark"
    tools:context="Conversion">

    <TextView
        android:id="@+id/title_activity_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/converter_"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="252dp" />

    <EditText
        android:id="@+id/numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/title_activity_2"
        android:layout_alignEnd="@+id/title_activity_2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/entier_"
        android:autofillHints=""
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/button_towardDecimal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/numberDecimal"
        android:layout_alignStart="@+id/numberDecimal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:contentDescription="@string/convertir_vers_d_cimal_land"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_baseline_arrow_upward_24"
        app:tint="@color/black" />

    <ImageButton
        android:id="@+id/button_towardBinary"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/numberDecimal"
        android:layout_alignEnd="@+id/numberDecimal"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:contentDescription="@string/convertir_vers_binaire_land"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_baseline_arrow_downward_24"
        app:tint="@color/black" />

    <EditText
        android:id="@+id/numberBinary"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/numberDecimal"
        android:layout_alignStart="@+id/numberDecimal"
        android:layout_alignEnd="@+id/numberDecimal"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="250dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/binaire_"
        android:autofillHints=""
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/numberBinary"
        android:layout_alignStart="@+id/numberBinary"
        android:layout_alignEnd="@+id/numberBinary"
        android:layout_marginStart="75dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:contentDescription="@string/revenir_la_page_d_acceuil_"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_revert"
        app:tint="@color/black" />

</RelativeLayout>
</ScrollView>